doctype html
head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  // CSS only
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
  link(rel='stylesheet' href='/css/prod_approve.css')
  title Approve product

h3.header Approve Urban Farmer Produce
form(action=`/prod_approve/app/${approve_produce._id}` method='post')
  .container.app-cont
    .row
      .col-lg-12
        select.form-select(aria-label='Default select example' name='prod_status')
          option(value='Approved') Approve
          option(value='Declined') Decline
        button.btn-sub(type='submit') Submit


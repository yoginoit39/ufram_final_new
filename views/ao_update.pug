head
  meta(charset='UTF-8')
  meta(http-equiv='X-UA-Compatible' content='IE=edge')
  meta(name='viewport' content='width=device-width, initial-scale=1.0')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.2.2/dist/css/bootstrap.min.css' rel='stylesheet' integrity='sha384-Zenh87qX5JnK2Jl0vWa8Ck2rdkQ2Bzep5IDxbcnCeuOxjzrPF/et3URy9Bv1WTRi' crossorigin='anonymous')
  link(rel='stylesheet' href='https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.2.0/css/all.min.css' integrity='sha512-xh6O/CkQoPOWDdYTDqeRdPCVd1SpvCA9XXcUnZS2FmJNp1coAFzvtCN9BmamE+4aHK8yyUHUSCcJHgXloTyT2A==' crossorigin='anonymous' referrerpolicy='no-referrer')
  link(rel='stylesheet' type='text/css' href='https://cdn.datatables.net/v/bs5/dt-1.12.1/datatables.min.css')
  link(rel='stylesheet' href='/css/style.css')
  title Document
.container
  .row
    form.cont-form#ao-form(action=`/ao/update/${ao_users._id}` method='post')
        .row.form-row
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='text' placeholder='F/O Number' name='fo_id' value=`${ao_users.fo_id}` disabled )
            label#float-lables F/O Number
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='text' placeholder='Password' name='fo_id' value=`${ao_users.password}` disabled )
            label#float-lables Password
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='date' placeholder='Registation Date'  name='reg_date' disabled)
            label#float-lables Registration Date
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='text' placeholder='Full Name'  name='full_name' disabled)
            label#float-lables Full Name
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='date' placeholder='Date of Birth' name='dob' disabled)
            label#float-lables Date of Birth
          .form-floating.col-lg-6.form-sel-act
            select.form-select(aria-label='Gender' name='Gender' disabled)
              option() Gender
              option(value='Male') Male
              option(value='Female') Female
          .form-floating.col-lg-6.form-sel-act
            select.form-select(aria-label='Ward Represented' name='Ward_Represented' disabled)
              option() Ward Represented
              option(value='Kampala') Kampala
              option(value='Masaka') Masaka
              option(value='Jinja') Jinja
              option(value='Hoima') Hoima    
          .form-floating.col-lg-6.form-sel-act(style='margin-top:20px')
            select.form-select(aria-label='Activities Involved' name='Acty_involved' required)
              option() Activities involved
              option(value='Mobilization') Mobilization
              option(value='Supervision') Supervision
              option(value='Regulation') Regulation
              option(value='Support') Support              
          .form-floating.col-lg-6(style='margin-top:20px')
            input#floatingInput.form-control(type='text' placeholder='Nin Number' name='nin_number' disabled)
            label#float-lables Nin Number
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='tel' placeholder='Phone Number' name='phn_nmbr' required )
            label#float-lables Phone Number
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='text' placeholder='Home Directions' name='home_directions' disabled)
            label#float-lables Home Directions
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='text' placeholder='Residence Type' name='res_type' disabled)
            label#float-lables Residence Type
          .form-floating.col-lg-6
            input#floatingInput.form-control(type='number' placeholder='period of stay' name='period_of_stay' disabled)
            label#float-lables Period of Stay
          .modal-footer
            button.btn.btn-success(type='submit' name='submit') Update 
            


.container.reg_btn
    .row
      .col-sm-12
      // Button trigger modal
      button.btn.btn-success#reg_button(type='button' data-bs-toggle='modal' data-bs-target='#exampleModal')
        | Register Urban Farmer +
// Modal
#exampleModal.modal.fade(tabindex='-1' aria-labelledby='exampleModalLabel' aria-hidden='true')
  .modal-dialog.modal-lg
    .modal-content
      .modal-header
        h1#exampleModalLabel.modal-title.fs-5 Register Urban Farmers
        button.btn-close(type='button' data-bs-dismiss='modal' aria-label='Close')
      .modal-body
        .container
          .row
            .col-lg-12
              form.cont-form(action='/fo' method='post')
                .row.form-row
                  .form-floating.col-lg-6
                    input#floatingInput.form-control(type='text' placeholder='F/O Number' name='uf_id' required)
                    label#float-lables Unique Id
                  .form-floating.col-lg-6
                    input#floatingInput.form-control(type='date' placeholder='Registation Date'  name='reg_date' required)
                    label#float-lables Registration Date
                  .form-floating.col-lg-6
                    input#floatingInput.form-control(type='text' placeholder='Full Name'  name='full_name' required)
                    label#float-lables Full Name
                  .form-floating.col-lg-6
                    input#floatingInput.form-control(type='date' placeholder='Date of Birth' name='dob' required)
                    label#float-lables Date of Birth
                  .form-floating.col-lg-6.form-sel-act
                    select.form-select(aria-label='Gender' name='gender')
                      option() Gender
                      option(value='Male') Male
                      option(value='Female') Female  
                  .form-floating.col-lg-6.form-sel-act(style='margin-top:0px')
                    select.form-select(aria-label='Activities Undertaken' name='activity' required)
                      option() Activities Undertaken
                      option(value='Mobilization') Mobilization
                      option(value='Supervision') Supervision
                      option(value='Regulation') Regulation
                      option(value='Support') Support              
                  .form-floating.col-lg-6(style='margin-top:20px')
                    input#floatingInput.form-control(type='text' placeholder='Nin Number' name='ninNumber' required)
                    label#float-lables Nin Numberadd_prod
                  .form-floating.col-lg-6
                    input#floatingInput.form-control.fo_phn_field(type='tel' placeholder='Phone Number' name='contact' style='margin-top:20px' required)
                    label#float-lables(style='margin-top:20px') Phone Number
                  .form-floating.col-lg-6.form-sel-act
                    select.form-select(aria-label='Ward Name' name='ward_name' required)
                      option() Ward Name
                      option(value='Kampala') Kampala
                      option(value='Masaka') Masaka 
                      option(value='Jinja') Jinja
                      option(value='Hoima') Hoima  
                  .modal-footer
                    button.btn.btn-success(type='submit' ) Submit
                    button.btn.btn-danger(type='button' data-bs-dismiss='modal') Close






          tr
            th Urban Farmer Unique Id
            th Date of Registration
            th Names  
            th DOB
            th Gender
            th Activities Undertaken
            th NIN Number
            th Contact
            th Ward Name
            th Alter
        tbody
          each fo in fo_data 
            tr.align-middle
              td #{fo.uf_id}
              td #{fo.reg_date}
              td #{fo.full_name}
              td #{fo.dob}
              td #{fo.gender}
              td #{fo.activity}
              td #{fo.ninNumber}

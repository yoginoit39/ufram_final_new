doctype html
head
  title Ufarm login
  meta(charset='utf-8')
  meta(name='viewport' content='width=device-width, initial-scale=1')
  link(rel='stylesheet' href='https://cdn.jsdelivr.net/npm/bootstrap-icons@1.4.1/font/bootstrap-icons.css')
  link(href='https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css' rel='stylesheet')
  link(rel='stylesheet' href='css/login.css')

nav.navbar.navbar-expand-lg.navbar-light.bg-light
  a.navbar-brand(href='#') Main Nav
  button.navbar-toggler(type='button' data-toggle='collapse' data-target='#navbarNav' aria-controls='navbarNav' aria-expanded='false' aria-label='Toggle navigation')
    span.navbar-toggler-icon
  #navbarNav.collapse.navbar-collapse
    ul.navbar-nav
      li.nav-item
        a.nav-link(href='/ao') AO 
      li.nav-item
        a.nav-link(href='/fo') FO 
      li.nav-item
        a.nav-link(href='/gp') GP 
      li.nav-item
        a.nav-link(href='/add_prod') UF 
      li.nav-item 
        a.nav-link(href='/auth') Login  
      li.nav-item 
        a.nav-link(href='/fo_approve') prod approve      

.login-page.bg-light
  .container.main-page
    .row
      .col-lg-10.offset-lg-1
        h3.mb-3(style='text-align: center;') Login
        .bg-white.shadow.rounded
          .row
            .col-md-7.pe-0
              .form-left.h-100.py-5.px-5
                form.row.g-4(action='/login')
                  .col-12
                    label
                      | Unique Id
                      span.text-danger *
                    .input-group
                      .input-group-text
                        i.bi.bi-person-fill
                      input.form-control(type='text' placeholder='Enter Unique Id' name='authDetails' required)
                  .col-12
                    label
                      | Password
                      span.text-danger *
                    .input-group
                      .input-group-text
                        i.bi.bi-lock-fill
                      input.form-control(type='password' placeholder='Enter Password' name='password' required)
                  .col-12
                    button.btn.btn-success.px-4.float-start.mt-4(type='submit') login
            .col-md-5.ps-0.d-none.d-md-block
              .form-right.h-100.bg-success.text-white.text-center.pt-5
                i.bi.bi-bootstrap
                h2.fs-1 Welcome Back!!!
        p.text-end.text-secondary.mt-3 Ufarm/Yogesh Lakhani
